!!!
%html
  %head
    %meta{ :charset => 'utf-8' }
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tag

    - if user_signed_in?
      = link_to "Sign out", destroy_user_session_path, :method => :delete
  %body
    %p.notice= notice
    %p.alert= alert

    = yield

